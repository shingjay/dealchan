<!DOCTYPE html>
<html>

	<head>
		<title>Dealchan</title>

		<!-- partials for stylesheets -->
		<%= render 'layouts/stylesheets' %>
		
		<!-- for website security: just worry about what this does -->
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div id="city-selection-modal"></div>

		<div id="jump-to-shortcut" style="top:100px;position:fixed">
			<ul>
				<% @deal_categories.each do |category| %>
					<li>
						<a href="#" id="jump-to-<%= category %>"><%= category %></a>
					</li>
				<% end %>
			</ul>
		</div>


		<!-- partials for header bar -->
		<%= render 'layouts/header' %>

		<%= yield %>
	</body>
	
</html>
